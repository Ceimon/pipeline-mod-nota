<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:p="http://www.w3.org/ns/xproc"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:html="http://www.w3.org/1999/xhtml"
               xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal">
  
  <x:script>
    <p:declare-step type="pxi:transform" version="1.0">
      <p:input port="source"/>
      <p:output port="result"/>
      <p:option name="grade" required="true"/>
      <p:import href="http://www.daisy.org/pipeline/modules/braille/common-utils/library.xpl"/>
      <px:transform>
        <p:with-option name="query" select="concat('(input:css)(input:html)(output:css)(translator:nota)(locale:da)(grade:',$grade,')')"/>
      </px:transform>
    </p:declare-step>
  </x:script>
  
  <x:scenario label="Grade 0 and 2">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml" style="hyphens:auto">
            <p style="display:block">foobar</p>
          </div>
        </x:document>
      </x:input>
    </x:call>
    
    <x:scenario label="grade 0">
      <x:call>
        <x:option name="grade" select="0"/>
      </x:call>
      <x:context label="result">
        <x:document type="port" port="result"/>
      </x:context>
      <x:expect label="result" type="compare">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml" style="hyphens: manual; text-transform: none">
            <p style="display: block">⠋⠕⠕­⠃⠁⠗</p>
          </div>
        </x:document>
      </x:expect>
    </x:scenario>
    
    <x:scenario label="grade 2">
      <x:call>
        <x:option name="grade" select="2"/>
      </x:call>
      <x:context label="result">
        <x:document type="port" port="result"/>
      </x:context>
      <x:expect label="result" type="compare">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml" style="hyphens: manual; text-transform: none">
            <p style="display: block">⠋⠕⠕­⠃⠁⠗</p>
          </div>
        </x:document>
      </x:expect>
    </x:scenario>
  </x:scenario>
  
  <x:scenario label="Text-level semantics">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <div xmlns="http://www.w3.org/1999/xhtml" style="hyphens:auto">
            <p style="display:block">
              <em>Sid ned!</em> råbte han.
            </p>
            <p style="display:block">
              På skiltet stod <strong>STOP</strong> med store bogstaver.
            </p>
            <p style="display:block">
              <abbr>NATO</abbr> har besluttet at gå imod <abbr>FN</abbr>'s
              beslutning. <abbr>NATO</abbr>s styrker indsættes i april.
            </p>
            <p style="display:block">
              Kejser Wilhelm <span class="roman">II</span> kender vi, men hvem var Wilhelm <span
              class="roman">I</span>?
            </p>
            <p style="display:block">
              Læs afsnit A nr. <span class="roman">iv</span>.
            </p>
          </div>
        </x:document>
      </x:input>
      <x:option name="grade" select="0"/>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare" pending="not implemented yet">
      <x:document type="inline">
        <div xmlns="http://www.w3.org/1999/xhtml" style="hyphens: manual; text-transform: none">
          <p style="display: block">
            <em>⠰⠎⠊⠙ ⠝⠑⠙⠖⠰</em> ⠗⠡⠃⠞⠑ ⠓⠁⠝⠄
          </p>
          <p style="display: block">
            ⠏⠡ ⠎⠅⠊⠇⠞⠑⠞ ⠎⠞⠕⠙ <strong>⠰⠎⠞⠕⠏⠰</strong> ⠍⠑⠙ ⠎⠞⠕⠗⠑ ⠃⠕⠛⠎⠞⠁⠧⠑⠗⠄
          </p>
          <p style="display: block">
            <abbr>⠸⠝⠁⠞⠕</abbr> ⠓⠁⠗ ⠃⠑⠎⠇⠥⠞⠞⠑⠞ ⠁⠞ ⠛⠡ ⠊⠍⠕⠙ <abbr>⠸⠋⠝</abbr>⠈⠎ ⠃⠑⠎⠇⠥⠞⠝⠊⠝⠛⠄
            <abbr>⠸⠝⠁⠞⠕</abbr>⠠⠎ ⠎⠞⠽⠗⠅⠑⠗ ⠊⠝⠙⠎⠜⠞⠞⠑⠎ ⠊ ⠁⠏⠗⠊⠇⠄
          </p>
          <p style="display: block">
            ⠅⠑⠚⠎⠑⠗ ⠺⠊⠇⠓⠑⠇⠍ <span class="roman">⠸⠊⠊</span> ⠅⠑⠝⠙⠑⠗ ⠧⠊⠂ ⠍⠑⠝ ⠓⠧⠑⠍ ⠧⠁⠗ ⠺⠊⠇⠓⠑⠇⠍ <span
            class="roman">⠨⠊</span>⠢
          </p>
          <p style="display: block">
            ⠇⠜⠎ ⠁⠋⠎⠝⠊⠞ ⠨⠁ ⠝⠗⠄ <span class="roman">⠠⠊⠧</span>⠄
          </p>
        </div>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="generated content">
    <x:call step="pxi:transform">
      <x:input port="source">
        <x:document type="inline">
          <dtbook xmlns="http://www.daisy.org/z3986/2005/dtbook/" style="hyphens:auto">
            <book>
              <frontmatter>
                <doctitle>title</doctitle>
              </frontmatter>
              <bodymatter>
                <level1>
                  <h1 style="display:block">body</h1>
                </level1>
              </bodymatter>
            </book>
          </dtbook>
        </x:document>
      </x:input>
      <x:option name="grade" select="2"/>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <dtbook xmlns="http://www.daisy.org/z3986/2005/dtbook/" style="hyphens: manual; text-transform: none">
          <book>
            <frontmatter>
              <doctitle>⠞⠊⠞­⠇⠑</doctitle>
              <level depth="1"
                     style="display: block; text-align: center; page-break-after: always; page-break-inside: avoid; flow: titlepage">
                <p style="display: block"/>
                <p style="display: block"/>
                <p style="display: block">⠵⠭ ⠋⠭­⠅⠭­⠳⠇⠎⠑</p>
                <p style="display: block"><span style="::before { content: -obfl-evaluate(&quot;(round $volume)&quot;) }"/>⠄ ⠃⠊⠟ ⠴
                <span style="::before { content: -obfl-evaluate(&quot;(round $volumes)&quot;) }"/></p>
                <p style="display: block">⠝⠕­⠞⠁</p>
                <p style="display: block">⠝⠁­⠞⠊⠕­⠝⠁⠇­⠃⠊­⠃⠇⠊­⠕­⠳⠅ ⠋ ⠍⠣­⠫­⠿⠱ ⠍ ⠇⠜­⠎⠑­⠧⠁⠝­⠿⠑­⠇⠔­⠓⠑­⠾</p>
              </level>
              <level depth="1" class="colophon"
                     style="display: block; page-break-after: always; page-break-inside: avoid; flow: colophon">
                <p style="display: block"/>
                <p style="display: block">⠊⠎⠃⠝</p>
                <p style="display: block">⠋⠑⠚⠇ ⠊ ⠏⠥⠝⠅­⠞⠥⠙­⠛⠁­⠧⠣ ⠅ ⠗⠁⠏­⠏⠭­⠳­⠷⠎ ⠏ ⠁⠥⠃⠘⠁⠝⠕­⠞⠁⠄⠝⠥</p>
                <p style="display: block"/>
                <p style="display: block"><span style="::before { content: -obfl-evaluate(&quot;(round $volume)&quot;) }"/>⠄ ⠏⠥⠝⠅⠞­⠃⠊⠟⠒ ⠤</p>
              </level>
            </frontmatter>
            <bodymatter>
              <level1>
                <h1 style="display: block">⠃⠕­⠙⠽</h1>
              </level1>
            </bodymatter>
          </book>
        </dtbook>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
